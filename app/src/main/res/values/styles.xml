<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.ToolBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/primaryInverse</item>

        <item name="actionMenuTextColor">@color/primaryDark</item>

        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/primaryInverse</item>

        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/primaryLight</item>

        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/accent</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/accentLight</item>

    </style>

    <style name="AppTheme.ToolBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/primaryInverse</item>
    </style>

    <style name="AppTheme.ToolBar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="AppTheme.FabStyle">
        <item name="android:tint">@color/primaryInverse</item>
    </style>

    <style name="AppTheme.Item">

    </style>

    <style name="AppTheme.Item.Container">
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="AppTheme.Item.Device">

    </style>

    <style name="AppTheme.Item.Device.Name">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="AppTheme.Item.Device.Address">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
    </style>

    <style name="AppTheme.Item.Device.Status">
        <item name="android:textAppearance">@style/TextAppearance.Item.Device.Status</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:drawableLeft">@drawable/ic_connected_indicator</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="AppTheme.Item.Recording">

    </style>

    <style name="AppTheme.Item.Recording.Title">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="AppTheme.Item.Recording.Subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
    </style>

    <style name="AppTheme.Item.Recording.Date">
        <item name="android:textAppearance">@style/TextAppearance.Item.Recording.Date</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="TextAppearance.Item.Device.Status" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/deviceStatus</item>
        <item name="android:textSize">4sp</item>
    </style>

    <style name="TextAppearance.Item.Recording.Date" parent="TextAppearance.AppCompat.Small">

    </style>

    <style name="AppTheme.Item.Empty">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
